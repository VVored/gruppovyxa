<Page x:Class="gruppovyxa.frames.ChooseProfessionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:gruppovyxa.frames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChooseProfessionPage">

    <Grid Grid.Row="0">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="0,0,0,0">
            <Button Margin="90, 0, 90, 15" FontSize="10" FontWeight="SemiBold" Padding="5" Background="Black" Foreground="White">Программист</Button>
            <Button Margin="90, 0, 90, 15" FontSize="10" FontWeight="SemiBold" Padding="5" Background="Black" Foreground="White">Юрист</Button>
            <Button Margin="90, 0, 90, 0" FontSize="10" FontWeight="SemiBold" Padding="5" Background="Black" Foreground="White">Доктор</Button>
        </StackPanel>
    </Grid>
</Page>
