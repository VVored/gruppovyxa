<Page x:Class="gruppovyxa.frames.doctorDragNDrop"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:gruppovyxa.frames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="doctorDragNDrop">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="1" Source="../imgs/humanBody.png" ></Image>
        <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
            <Image Source="../imgs/желудок.png" Height="50" Margin="0, 30"></Image>
            <Image Source="../imgs/кишечник.png" Height="50" Margin="0, 30"></Image>
            <Image Source="../imgs/легкие.png" Height="50" Margin="0, 30"></Image>
        </StackPanel>
        <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center">
            <Image Source="../imgs/мозг.png" Height="50" Margin="0, 30"></Image>
            <Image Source="../imgs/печень.png" Height="50" Margin="0, 30"></Image>
            <Image Source="../imgs/сердце.png" Height="50" Margin="0, 30"></Image>
        </StackPanel>
    </Grid>
</Page>
