<Window x:Class="gruppovyxa.HintWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gruppovyxa"
        mc:Ignorable="d"
        Title="HintWindow" Height="250" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="imgs/Parsec Games.png" Width="40" VerticalAlignment="Top" Margin="0, 10, 0, 0" Grid.Column="0" HorizontalAlignment="Center" Height="40"></Image>
        <Border Grid.Row="1" VerticalAlignment="Center" Height="140" Width="450" BorderBrush="Black" BorderThickness="1">
            <StackPanel>
                <Image x:Name="img"/>
                <TextBlock HorizontalAlignment="Center" Margin="0 10 0 0" FontWeight="SemiBold" Width="auto" TextWrapping="Wrap" x:Name="WordNum"/>
                <TextBlock Margin="20" TextWrapping="Wrap" x:Name="HintText"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>