<Window x:Class="gruppovyxa.DragNDropWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gruppovyxa"
        mc:Ignorable="d"
        Title="DragNDropWindow" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Image Source="imgs/Parsec Games.png" Width="40" VerticalAlignment="Top" Margin="0,10,0,0" Grid.Column="0" HorizontalAlignment="Left" Height="40"></Image>
        <TextBlock FontWeight="SemiBold" TextWrapping="Wrap" Grid.Row="0" HorizontalAlignment="Center" FontSize="15" VerticalAlignment="Center" Name="Poyas" Margin="301,27,300.6,27">Пояснение к заданию:</TextBlock>
        <Frame Grid.Row="1" Name="frame" Margin="0,0,-0.4,-0.4"></Frame>
        <Button Grid.Row="2" Margin="25, 15" HorizontalAlignment="Right" Padding="5" FontWeight="SemiBold" Background="Black" Foreground="White">Завершить этап</Button>
    </Grid>
</Window>
